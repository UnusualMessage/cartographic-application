{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/Auth/{**all}"
        }
      },

      "users": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/Users/{**all}"
        }
      },

      "notifications": {
        "ClusterId": "notifications",
        "Match": {
          "Path": "/api/Notifications/{**all}"
        }
      }
    },
    
    "Clusters": {
      "identity": {
        "Destinations": {
          "main": {
            "Address": "https://localhost:5444"
          }
        }
      },

      "notifications": {
        "Destinations": {
          "main": {
            "Address": "https://localhost:50443"
          }
        }
      }
    }
  }
}
